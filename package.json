{
  "name": "fastgpt-plugins",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "build-main": "bun build --outfile=dist/index.js --target=node --minify ./src/index.ts && cp ./src/worker/worker.js dist/worker.js",
    "build": "bun ./scripts/build.ts",
    "start": "bun ./dist/index.js -p",
    "dev": "bun run --watch src/index.ts -p",
    "test": "vitest",
    "lint": "bun eslint --fix",
    "prettier": "prettier --write \"./**/*.{ts,js,json}\"",
    "new:tool": "bun ./scripts/newTool/index.ts"
  },
  "dependencies": {
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/express": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "comlink": "^4.4.2",
    "express": "^5.1.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.3",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@types/bun": "latest",
    "@vitest/coverage-v8": "3.1.2",
    "bun-plugin-dts": "^0.3.0",
    "commander": "^13.1.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.29.1",
    "prettier": "3.2.4",
    "vitest": "3.1.2",
    "@types/express": "^5.0.1",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "sdk",
    "packages/tool/packages/*"
  ],
  "packageManager": "bun@1.2.2",
  "lint-staged": {
    "./**/**/*.{ts}": [
      "npm run lint",
      "npm run prettier"
    ]
  }
}
